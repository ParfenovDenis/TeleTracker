{# ссылка на обзор #}
{# TODO: переименовать track.html.twig в submenu? #}
<li class="nav-item"><a class="nav-link"
                        href="{{ path("overview", {'year' : datetime|date("Y"), 'month': datetime|date("m"), 'day': datetime|date("d")}) }}">{% trans %}overview{% endtrans %}</a>
</li>

{# выбранная машина #}
<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle dropdown" href="#" data-toggle="dropdown"
       aria-haspopup="true" aria-expanded="false">
        {% if current_id is defined and current_id is not null %}
            {{ trucks[current_id] }}
        {% else %}
            {% trans %}car_select{% endtrans %}
        {% endif %}
    </a>
    {# список машин #}
    <ul class="dropdown-menu bg-dark">
        {% for id,truck in trucks %}
            <li>
                <a class="nav-link dropdown {% if current_id is defined and id == current_id %} active{% endif %}"
                   href="{{ route }}{{ id }}/{{ datetime|date("Y/m/d") }}">{{ truck }}</a></li>
        {% endfor %}
    </ul>

</li>
{% if  current_id is defined %}
    {# поле с датой #}
    <li class="nav-item" style="position: relative; z-index: 2000">
        <div class="input-group input-group-sm col-auto" style="padding-top: 4px;">
            {% include 'nav/js-datetimepicker.html.twig' %}
        </div>
    </li>
{% endif %}

