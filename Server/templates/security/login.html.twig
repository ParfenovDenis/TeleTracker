{% extends 'base.html.twig' %}

{% block title %}{% trans %}Log_in{% endtrans %}{% endblock %}

{% block body %}
    <div class="col-md-4 col-md-offset-4  vertical-center">
        <div class="row">
            <div>


                    {% for message in app.flashes('notice') %}
                        <div class="flash-notice">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                        <div class="checkbox mb-3">{% trans %}You_are_logged_in_as{% endtrans %} {{ last_username }}
                            , <a
                                    href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a>

                        </div>
                        {% endif %}
                        <fieldset>
                            <legend><i class="fa fa-lock" aria-hidden="true"></i>{% trans %}Please_sign_in{% endtrans %}
                            </legend>
                            <div class="form-group">
                                <label for="inputEmail" class="sr-only">Email</label>
                                <input type="email" value="{{ last_username }}" name="_username" id="inputEmail"
                                       class="form-control"
                                       placeholder="Email" required autofocus />


                            </div>
                            <div class="form-group">
                                <label for="inputPassword" class="sr-only">{% trans %}Password{% endtrans %}</label>
                                <input type="password" name="_password" id="inputPassword" class="form-control"
                                       placeholder="{% trans %}Password{% endtrans %}" required>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >



                            <button class="btn btn-lg btn-primary" type="submit">
                                <i class="fa fa-sign-in" aria-hidden="true"></i>
                                {% trans %}Log_in{% endtrans %}
                            </button>
                        </fieldset>
                    </form>


            </div>
        </div>
    </div>
{% endblock %}
